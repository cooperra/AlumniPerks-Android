<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/perk_background_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/perk_image_detail"
        android:layout_width="126dp"
        android:layout_height="106dp"
        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/perk_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/perk_location_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:autoLink="all"
        android:text="TextView" />

    <TextView
        android:id="@+id/perk_number_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:autoLink="all"
        android:text="TextView"  />
	
    <TextView
        android:id="@+id/perk_discount_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:text="TextView" />

    <LinearLayout  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">
    
    <Button
        android:id="@+id/perk_website_detail"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="30dp"
        android:layout_marginRight = "20dp"
        style="@style/lightboxButton.Grey"
        android:text="Details" />
    
    <Button
        android:id="@+id/perk_coupon_detail"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/lightboxButton.Grey"
        android:text="Coupon" />
    </LinearLayout>

</LinearLayout>
